<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/appGrey</item>
        <item name="colorPrimaryDark">@color/appGreyDark</item>
        <item name="colorAccent">@color/appGreyLight</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:color">@color/white</item>
        <item name="android:windowBackground">@color/lightGrey</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/appGreyDark</item>

        <item name="drawerArrowStyle">@style/Widget.Styled.DrawerArrowToggle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="drawerArrowStyle">@style/Widget.Styled.DrawerArrowToggle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.Styled.DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>
